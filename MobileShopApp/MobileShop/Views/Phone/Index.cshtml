@model IEnumerable<MobileShop.Entities.Phone>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center my-4">
    <a class="btn btn-success w-25" asp-action="Create">Add New Phone</a>
</div>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Display)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Memory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Battery)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManufacturerName)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.ManufacturerID)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Display)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Memory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Battery)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhotoURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManufacturerName)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Manufacturer.ManufactuterID)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.PhoneID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PhoneID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PhoneID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
